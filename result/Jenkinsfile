pipeline {
    agent any
    tools {
        nodejs "node"
    }
    stages {
        stage('build') {
            when{
                changeset "**/result/**"
            }
            steps {
                echo 'Compiling result app'
                dir('result') {
                    sh 'npm install'
                }
            }
        }
        stage('test') {
            when{
                changeset "**/result/**"
            }
            steps {
                echo 'Running Unit Tests on result app'
                dir('worker') {
                    sh 'npm install'
                    sh 'npm test'
                }
            }
        }       
    }
    post {
        always {
            echo 'Pipeline for result app is completed...'
        }
    }
}
